{
  "version": 2,
  "buildCommand": "chmod +x ./pre-build-fix.sh && ./pre-build-fix.sh && npm install --legacy-peer-deps --force && next build",
  "devCommand": "npm run dev",
  "installCommand": "echo 'Skipping install step, handled in build command'",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}